------------------------47-- reverse the string-----------------------------------------


#include <bits/stdc++.h>
using namespace std;
 

void reverseStr(string & str)
{
    int len = str.length();
    int n = len-1;
    int i = 0;
    while(i<=n){
       
        swap(str[i],str[n]);
        n = n-1;
        i = i+1;
  }
 
}
 

int main()
{
    string str = "geeksforgeeks";
    reverseStr(str);
    cout << str;
    return 0;
}

------------------------------------------------------------------------------


#include <bits/stdc++.h>
using namespace std;
 
// Function to reverse a string
void reverse(string str)
{
    int len = str.length();
    int n = len;
    while(n--)
        cout << str[n];
}
 

int main(void)
{
    string s = "GeeksforGeeks";
 
    reverse(s);
    return (0);
}
