---------------------------------------6--FIND THE UNION AND INTERSECTION OF TWO SORTED ARRAY-----------------------------------------------------------------
// ------------------- for intersection--------------------------------------------------
#include<bits/stdc++.h>
using namespace std;
void intersection(int arr1[], int arr2[], int n, int m){
    int i = 0, j = 0;
    while(i<n&& j<m){
        if(arr1[i]<arr2[j]){
            i++;
        }else if(arr1[i]>arr2[j]){
            j++;
        }else{
            cout<<arr1[i]<<" ";
            i++;
            j++;
        }
    }
}
int main(){
    int n = 6, m = 6;
    int arr1[6] = {1, 2, 4, 6, 7, 8};
    int arr2[6] = {1, 4, 9, 8, 0, 6};
    intersection(arr1, arr2, n, m);
    return 0;
}
